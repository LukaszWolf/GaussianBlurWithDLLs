<Window x:Class="GaussianBlur.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gaussian Blur Controller"
        Height="500" Width="900"
        Background="#FFF9F9F9">

    <Grid Margin="20">
        <!-- Kolumny: lewa (DLL), prawa (folder) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Wiersze: pasek przycisków / info (path + lista) / Run -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sekcja wyboru DLL (lewa) -->
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Text="Choose DLL:"
                       FontFamily="Consolas" FontWeight="Bold" FontSize="18"
                       VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button x:Name="btnChooseCDll"
                    Content="C"
                    Width="50" Height="30" Margin="5,0"
                    Click="btnChooseCDll_Click"/>
            <Button x:Name="btnChooseAsmDll"
                    Content="ASM"
                    Width="70" Height="30" Margin="5,0"
                    Click="btnChooseAsmDll_Click"/>
        </StackPanel>

        <!-- Sekcja wyboru folderu (prawa) -->
        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right">
            <TextBlock Text="Choose folder with images:"
                       FontFamily="Consolas" FontWeight="Bold" FontSize="18"
                       VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button x:Name="btnChooseFolder"
                    Content="Browse..."
                    Width="100" Height="30"
                    Click="btnChooseFolder_Click"/>
        </StackPanel>

        <!-- INFO: ścieżka + lista w jednej kolumnie, wyśrodkowane, z odstępami -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Vertical" Margin="0,24,0,0">
            <TextBlock x:Name="tbFilePath"
                       FontFamily="Consolas" FontWeight="Bold" FontSize="14"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="tbLines"
                       FontFamily="Consolas" FontSize="14" Foreground="DarkSlateGray"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16"/>
        </StackPanel>

        <!-- RUN: wyśrodkowany na całą szerokość z większym odstępem -->
        <Button x:Name="btnRunProcessing"
                Grid.Row="2" Grid.ColumnSpan="2"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Content="Run" Width="120" Height="34"
                Margin="0,16,0,0"
                Click="btnRunProcessing_Click"/>
    </Grid>
</Window>
