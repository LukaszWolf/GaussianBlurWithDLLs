<Window x:Class="GaussianBlur.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gaussian Blur Controller"
        Height="500" Width="800"
        Background="#FFF9F9F9"
        >
    
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sekcja wyboru DLL -->
        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
            <TextBlock Text="Choose DLL:" 
                       FontFamily="Consolas" FontWeight="Bold" FontSize="18"
                       VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button x:Name="btnChooseCDll" Content="C" Width="50" Height="30" Margin="5,0" Click="btnChooseCDll_Click"/>
            <Button x:Name="btnChooseAsmDll" Content="ASM" Width="70" Height="30" Click="btnChooseAsmDll_Click"/>
        </StackPanel>

        <!-- Sekcja wyboru folderu -->
        <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="40,0,0,0">
            <TextBlock Text="Choose folder with images:" 
                       FontFamily="Consolas" FontWeight="Bold" FontSize="18"
                       VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button x:Name="btnChooseFolder" Content="Browse..." Width="100" Height="30" Margin="5,0" Click="btnChooseFolder_Click"/>
        </StackPanel>
        <TextBlock Name="tbResult" HorizontalAlignment="Left" Margin="50,36,0,0" Grid.Row="1" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="120"/>
        <TextBlock Name ="tbFilePath" HorizontalAlignment="Right" Margin="0,14,30,0" Grid.Row="1" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="400" FontFamily="Consolas" FontWeight="Bold" Grid.Column="1"/>
        <Button x:Name="btnRunProcessing" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Run" Click="btnRunProcessing_Click" Height="30" Width="100"/>
    </Grid>
    
</Window>
